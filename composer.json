{
    "name": "nextapps/unique-codes",
    "description": "Generate unique, random-looking codes",
    "keywords": [
        "nextapps",
        "unique-codes",
        "vouchers",
        "coupons"
    ],
    "homepage": "https://github.com/nextapps-be/unique-codes",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "GÃ¼nther Debrauwer",
            "email": "gunther@nextapps.be",
            "homepage": "https://nextapps.be",
            "role": "Developer"
        },
        {
            "name": "Evert Arnould",
            "email": "evert@nextapps.be",
            "homepage": "https://nextapps.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "NextApps\\UniqueCodes\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NextApps\\UniqueCodes\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "lint": "vendor/bin/php-cs-fixer fix",
        "lint-dry": "vendor/bin/php-cs-fixer fix --dry-run --diff-format=udiff"
    },
    "config": {
        "sort-packages": true
    }
}
